<script>
    $('select').selectpicker();

    loadTable();

    function loadTable(name, email)
    {
        $('#userTable').DataTable(
            {
                "ajax":
                {
                    "url": '@Url.Action("GetRecipientList", "Admin")',
                    "type": "POST",
                    "datatype": "json",
                    "data": { Name: name, Email: email }
                },
                'columns':
                    [
                        { "data": "hidden", "name": "0" },
                        { "data": "Institution", "name": "Institution" },
                        { "data": "FirstName", "name": "FirstName" },
                        { "data": "LastName", "name": "LastName" },
                        { "data": "Email", "name": "Email" },
                        { "data": "CountryOfResidence", "name": "CountryOfResidence" },
                        { "data": "Position", "name": "Position" },
                        { "data": "Unit", "name": "Unit" },
                        { "data": "YearsAtOrganization", "name": "YearsAtOrganization" },
                        { "data": "Age", "name": "Age" },
                        { "data": "Gender", "name": "Gender" },
                        { "data": "Race_Ethnicity", "name": "Race_Ethnicity" }
                    ],
                'columnDefs':
                    [
                        {
                            "targets": 0,
                            "visible": false,
                            "searchable": false,
                            "orderable": false,
                            "render": function (data, type, full, meta) {
                                console.log(full);
                                return null;
                            }
                        },
                        {
                            "targets": 1,
                            'className': 'col-lg-3',
                            "orderable": true,
                            "render": function (data, type, full, meta) {
                                // return '<div class="text-center">' + full.Name + '</div>';
                                return full.Institution;
                            }
                        },
                        {
                            "targets": 2,
                            'className': 'col-lg-3',
                            "orderable": true,
                            "render": function (data, type, full, meta) {
                                // return '<div class="text-center">' + full.Name + '</div>';
                                return full.FirstName;
                            }
                        },
                        {
                            "targets": 3,
                            'className': 'col-lg-3',
                            "orderable": true,
                            "render": function (data, type, full, meta) {
                                // return '<div class="text-center">' + full.Name + '</div>';
                                return full.LastName;
                            }
                        },
                        {
                            "targets": 4,
                            'className': 'col-lg-3',
                            "orderable": false,
                            "render": function (data, type, full, meta) {
                                return full.Email;
                            }
                        },
