    function UpdateRecipient(id)
    {
        $('#loadImg').show();

        $.ajax({
            type: 'POST',
            url: "../Admin/GetRecipientById",
            dataType: "json",
            data: {
                id: id
            },
            success: function (response)
            {
                console.log(response);
                $('#updateId').val(response.Id);
                $('#updateIName').val(response.Institution);
                $('#updateFName').val(response.FirstName);
                $('#updateLName').val(response.LastName);
                $('#updateEmail').val(response.Email);

                if (response.CountryOfResidence != "") {
                    $('#country').find("[value=" + response.CountryOfResidence + "]").attr("selected", true).change();
                }
                $('#updatePosition').val(response.Position);
                $('#updateUnit').val(response.Unit);
                if (response.YearsAtOrganization != "") {
                    $('#select-years-at-organization').find("[value=" + response.YearsAtOrganization + "]").attr("selected", true).change();
                }
                if (response.Age != "") {
                    $('#select-age').find("[value=" + response.Age + "]").attr("selected", true).change();
                }
                if (response.Gender != "") {
                    $('#select-gender').find("[value=" + response.Gender + "]").attr("selected", true).change();
                }
                $('#updateRace_Ethnicity').val(response.Race_Ethnicity);

                $('#updateModal').modal('show');
                $('#loadImg').hide();
            },
            error: function () {
                alert("ajax Failed");
            }
        });
    }

    function deleteFunction(id)
    {
        var a = document.getElementById('deleteId');
        a.href = "../Admin/DeleteRecipient?id=" + id + "";
    }

