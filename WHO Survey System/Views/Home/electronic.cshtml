                    if ((k == 4 && i == 0) || (k == 8 && i == 1) || (k == 12 && i == 2) || (k == 16 && i == 3) || (k == 20 && i == 4) || (k == 24 && i > 4))
                    //if ((k == 4 && i == 0) || (k == 8 && i == 1) || (k == 12 && i == 2) || (k == 16 && i == 3) || (k == 20 && i >= 3))
